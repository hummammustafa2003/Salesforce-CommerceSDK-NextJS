{
  "extends": "@repo/typescript-config/nextjs.json",
  "target": "esnext",
  "compilerOptions": {
      "incremental": true,
      "plugins": [
        {
          "name": "next"
        }
      ],
      "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",  
    "next.config.js", 
    "**/*.ts", 
    "**/*.tsx", 
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}